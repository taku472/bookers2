<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user do |f| %>
      <div for="inputName">
        <%= f.label :Name %><br>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div for="inputImage">
        <%= f.label :Image %><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>

      <div for="inputIntroduction">
        <%= f.label :Introduction %><br>
        <%= f.text_area :introduction, autofocus: true %>
      </div>
      <%= f.submit "UpdateUser" %>
    <% end %>
    </div
  </div>
</div>