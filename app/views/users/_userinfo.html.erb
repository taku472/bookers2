<p id="notice"><%= notice %></p>
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>
      <table class="table">
        <thead>
          <tr>
        	  <th>name</th>
        	  <td><%= current_user.name %></td>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <td><%= current_user.introduction %></td>
          </tr>
        </thead>
      </table>
      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>

      <div class="">
        <%= f.label :title %><br>
        <%= f.text_field :title, id: :book_title %>
      </div>

      <div class="">
        <%= f.label :Opinion %><br>
        <%= f.text_area :Opinion, id: :book_Opinion %>
      </div>

      <div class="actions">
        <%= f.submit :CreateBook %>
      </div>
      <% end %>
    </div>





