<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url:'/users/current_user.id/edit' do |f| %>
        <label>Name</label>
        <%= f.text_field :name %>

        <label>Image</label>
        <%= f.file_field :image, accept: "image/*" %>

        <label>Introduction</label>
        <%= f.text_area :introduction %>

        <%= f.submit 'Update User' %>
    </div>
  </div>
</div>
