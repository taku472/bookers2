<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>

        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title, id: :book_title %>
        </div>

        <div class="filed">
          <%= f.label :Opinion %><br>
          <%= f.text_area :Opinion, id: :book_Opinion %>
        </div>

        <div class="actions">
          <%= f.submit :CreateBook %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.Opinion %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>